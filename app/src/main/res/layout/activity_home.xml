<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleX="1"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_home_titel"
            android:layout_width="397dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:text="سوپر گوشت رضوان"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="391dp"
            android:layout_height="160dp"
            android:scaleX="1.5"
            app:srcCompat="@drawable/meatproduct" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="265dp"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="آدرس:احمدآباد پرستار 10"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_home_phon"
            android:layout_width="266dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="تلفن:88776603-0513"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="364dp"
            android:layout_height="135dp"
            android:gravity="center"
            android:text="خدمت رسانی 24 ساعته
             هدف ما جلب رضایت شماست"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_listproduct"
            android:layout_width="203dp"
            android:layout_height="56dp"
            android:onClick="click"
            android:text="لیست محصولات"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>