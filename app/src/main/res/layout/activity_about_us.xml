<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6"
    tools:context=".about_us">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/axs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_about1"
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:gravity="center"
            android:text="سوپرگوشت رضوان ازسال 1370 خدمات خود را آغاز کرد و همواره در طی این چند دهه به دنبال ارایه بهترین خدمات به همشهریان عزیز بوده و خواهد بود.آرزوی ما رضایت شماست."
            android:textColor="#040404"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_about2"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:text="راههای ارتباط با ما:"
            android:textColor="#070707"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="0513_88776603"
            android:textColor="#070707"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_insta"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="rezvan_goosht@"
            android:textColor="#090909"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_adress"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:text="احمدآباد پرستار 10"
            android:textColor="#090909"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="220dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:onClick="click_backabout"
            android:text="بازگشت به صفحه اصلی"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>